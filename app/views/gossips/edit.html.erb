<h1>Editer un Gossip:</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label>Nom du Gossip: </label>
      <%= f.text_field :title, class: 'form-control', placeholder: 'title' %>
    </div>
    <div class="form-group">
      <label>Quel est ton gossip? </label>
        <%= f.text_area :content, class: 'form-control', placeholder: 'ton gossip' %>
    </div>
    <div class="form-group">
      <label>Ton nom nom anonyme:</label>
      <%= f.text_field :anonymous_gossiper, class: 'form-control', placeholder: 'ton pseudo' %>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Valider</button>
    </div>
 <% end -%>
